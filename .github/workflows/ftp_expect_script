#!/usr/bin/expect
spawn sftp -oHostKeyAlgorithms=+ssh-dss [lindex $argv 0]@ftp.campbellluggblackwell.com
expect "Are you sure"
send "yes\r"
#expect "Name (ftp.campbellluggblackwell.com:runner):"
#send "[lindex $argv 0]@campbellluggblackwell.com\r"
expect "ssword:"
send "[lindex $argv 1]\r"
expect "ftp>"
send "cd public_html\r"
expect "ftp>"
send "mget *.svg .\r"
send "mget *.png .\r"
send "mget *.jpg .\r"
send "mget *.jpeg .\r"
send "mget *.xcf .\r"
send "mget *.html .\r"
send "mget *.js .\r"
send "mget *.css .\r"
send "mget *.htaccess .\r"
expect "ftp>"
send "bye\r"
